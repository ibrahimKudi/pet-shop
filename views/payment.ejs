<%- include('partials/header') %> 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment Options</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Payment for <%= horse.name %></h1>
    <p><strong>Adoption Fee:</strong> <%= horse.fee %></p>

    <h2>Your Details:</h2>
    <p><strong>Name:</strong> <%= inquiryDetails.name %></p>
    <p><strong>Email:</strong> <%= inquiryDetails.email %></p>
    <p><strong>Phone:</strong> <%= inquiryDetails.phone %></p>
    <p><strong>City:</strong> <%= inquiryDetails.city %></p>
    <p><strong>State:</strong> <%= inquiryDetails.state %></p>
    <p><strong>Preferred Contact:</strong> <%= inquiryDetails.contact %></p>

    <h2>Select Payment Method</h2>
    <form action="/payment-confirmation/<%= horse.id %>" method="POST">
      <label>
        <input type="radio" name="payment-method" value="crypto" required> Crypto
      </label><br>
      <label>
        <input type="radio" name="payment-method" value="paypal"> PayPal
      </label><br>
      <label>
        <input type="radio" name="payment-method" value="cashapp"> Cash App
      </label><br>
      <label>
        <input type="radio" name="payment-method" value="venmo"> Venmo
      </label><br>
      <label>
        <input type="radio" name="payment-method" value="bank-transfer"> Bank Transfer
      </label><br>

      <button type="submit" class="button">Submit</button>
    </form>
    <a href="/horses" class="back-link">‚Üê Back to All Horses</a>
  </div>
</body>
</html>
<%- include('partials/footer') %>
