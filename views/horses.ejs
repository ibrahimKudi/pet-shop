<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Horses</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>All Available Horses</h1>
    <div class="all-horses-list">
      <% horses.forEach(horse => { %>
        <a href="/horses/<%= horse.id %>" class="horse-card-link">
          <div class="all-horse-card">
            <img src="<%= horse.image %>" alt="<%= horse.name %>">
            <h2><%= horse.name %></h2>
            <p><strong>Breed:</strong> <%= horse.breed %></p>
            <p><strong>Age:</strong> <%= horse.age %> years</p>
            <p><strong>Height:</strong> <%= horse.height %></p>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</body>
</html>

